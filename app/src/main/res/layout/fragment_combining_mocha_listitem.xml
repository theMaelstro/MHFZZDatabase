<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listitem"
    style="@style/list_item_basic"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/margin_small"
    android:paddingBottom="@dimen/margin_small"
    android:clickable="false"
    android:gravity="center_vertical"
    android:background="?android:attr/selectableItemBackground">
    <!-- Note: padding/margin above are separated as an implementation detail.
        The padding can be set to zero by code, the margin cannot.-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="4dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/mochapot"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:paddingLeft="@dimen/margin_medium"
                android:paddingTop="@dimen/padding_small"
                android:paddingRight="@dimen/margin_large"
                android:paddingBottom="@dimen/padding_small"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="4dp">
                <!--app:layout_constraintTop_toBottomOf="@id/input"-->

                <ImageView
                    android:id="@+id/mochapot_icon"
                    android:layout_width="@dimen/image_size_large"
                    android:layout_height="@dimen/image_size_large"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    tools:src="@drawable/drawer_items" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/margin_large"
                    android:paddingTop="@dimen/padding_small"
                    android:paddingRight="@dimen/margin_large"
                    android:paddingBottom="@dimen/padding_small">

                    <TextView
                        android:id="@+id/mocha_title"
                        style="@style/text_small_secondary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:text="@string/help_mocha_pot"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/mochapot_name"
                        style="@style/text_small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        tools:text="Mocha Pot" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/item1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/margin_medium"
                android:paddingTop="@dimen/padding_small"
                android:paddingRight="@dimen/margin_large"
                android:paddingBottom="@dimen/padding_small"
                android:visibility="visible">

                <View
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:background="#D3D3D3"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/item1_name"
                    style="@style/text_small"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="4dp"
                    android:layout_marginLeft="4dp"
                    android:gravity="center_vertical"
                    android:visibility="visible"
                    tools:text="Herb Potion" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/item1_icon"
                    android:layout_width="@dimen/image_size_small"
                    android:layout_height="@dimen/image_size_small"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:visibility="visible"
                    tools:src="@drawable/drawer_items" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/item3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/margin_medium"
                android:paddingTop="@dimen/padding_small"
                android:paddingRight="@dimen/margin_large"
                android:paddingBottom="@dimen/padding_small"
                android:visibility="visible">

                <View
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:background="#2DAEB0"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/item3_name"
                    style="@style/text_small"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="4dp"
                    android:layout_marginLeft="4dp"
                    android:gravity="center_vertical"
                    android:visibility="visible"
                    tools:text="Herb Potion" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/item3_icon"
                    android:layout_width="@dimen/image_size_small"
                    android:layout_height="@dimen/image_size_small"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:visibility="visible"
                    tools:src="@drawable/drawer_items" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/item5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/margin_medium"
                android:paddingTop="@dimen/padding_small"
                android:paddingRight="@dimen/margin_large"
                android:paddingBottom="@dimen/padding_small"
                android:visibility="visible">

                <View
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:background="#CED02F"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/item5_name"
                    style="@style/text_small"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="4dp"
                    android:layout_marginLeft="4dp"
                    android:gravity="center_vertical"
                    android:visibility="visible"
                    tools:text="Herb Potion" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/item5_icon"
                    android:layout_width="@dimen/image_size_small"
                    android:layout_height="@dimen/image_size_small"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:visibility="visible"
                    tools:src="@drawable/drawer_items" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:paddingLeft="@dimen/margin_medium"
                android:paddingTop="@dimen/padding_small"
                android:paddingRight="@dimen/margin_large"
                android:paddingBottom="@dimen/padding_small"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="4dp">
                <!--app:layout_constraintTop_toBottomOf="@id/input"-->

                <ImageView
                    android:id="@+id/input_icon"
                    android:layout_width="@dimen/image_size_large"
                    android:layout_height="@dimen/image_size_large"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    tools:src="@drawable/drawer_items" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/margin_large"
                    android:paddingTop="@dimen/padding_small"
                    android:paddingRight="@dimen/margin_large"
                    android:paddingBottom="@dimen/padding_small">

                    <TextView
                        android:id="@+id/input_title"
                        style="@style/text_small_secondary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:text="@string/help_mocha_input"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/input_name"
                        style="@style/text_small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        tools:text="Input Item" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/item2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/margin_medium"
                android:paddingTop="@dimen/padding_small"
                android:paddingRight="@dimen/margin_large"
                android:paddingBottom="@dimen/padding_small"
                android:visibility="visible">

                <View
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:background="#A43FD8" />

                <TextView
                    android:id="@+id/item2_name"
                    style="@style/text_small"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="4dp"
                    android:layout_marginLeft="4dp"
                    android:gravity="center_vertical"
                    android:visibility="visible"
                    tools:text="Herb Potion" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/item2_icon"
                    android:layout_width="@dimen/image_size_small"
                    android:layout_height="@dimen/image_size_small"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:visibility="visible"
                    tools:src="@drawable/drawer_items" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/item4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/margin_medium"
                android:paddingTop="@dimen/padding_small"
                android:paddingRight="@dimen/margin_large"
                android:paddingBottom="@dimen/padding_small"
                android:visibility="visible">

                <View
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:background="#2FD033"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/item4_name"
                    style="@style/text_small"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="4dp"
                    android:layout_marginLeft="4dp"
                    android:gravity="center_vertical"
                    android:visibility="visible"
                    tools:text="Herb Potion" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/item4_icon"
                    android:layout_width="@dimen/image_size_small"
                    android:layout_height="@dimen/image_size_small"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:visibility="visible"
                    tools:src="@drawable/drawer_items" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/item6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/margin_medium"
                android:paddingTop="@dimen/padding_small"
                android:paddingRight="@dimen/margin_large"
                android:paddingBottom="@dimen/padding_small"
                android:visibility="visible">

                <View
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:background="#D65C5C"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/item6_name"
                    style="@style/text_small"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="4dp"
                    android:layout_marginLeft="4dp"
                    android:gravity="center_vertical"
                    android:visibility="visible"
                    tools:text="Herb Potion" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/item6_icon"
                    android:layout_width="@dimen/image_size_small"
                    android:layout_height="@dimen/image_size_small"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:visibility="visible"
                    tools:src="@drawable/drawer_items" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


    <!-- Layer 3 -->


</android.support.constraint.ConstraintLayout>